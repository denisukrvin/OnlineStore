@model OnlineStore.Models.Category

@{
    ViewBag.Title = "Деталі категорії";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="row d-flex justify-content-between mb-3">
        <div class="col-4">
            <a class="btn btn-dark btn-sm" href="@Url.Action("Categories", "Admin")" role="button">
                <i class="fas fa-reply"></i>
            </a>
        </div>
        <div class="col-8">
            <h5>Деталі категорії</h5>
        </div>
    </div>

    <hr />

    <div class="row d-flex justify-content-center">
        <div class="col-md-8">           
            <div class="form-group">
                <label for="categoryName">Назва</label>
                <input type="text" class="form-control" id="categoryName" maxlength="50" value="@Model.Name" readonly>
            </div>
            <div class="form-group">
                <label for="categoryDescription">Опис</label>
                <input type="text" class="form-control" id="categoryDescription" maxlength="50" value="@Model.Description" readonly>
            </div>
        </div>
    </div>

