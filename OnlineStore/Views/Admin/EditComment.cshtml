@model OnlineStore.Models.Comment

@{
    ViewBag.Title = "Редагувати відгук";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="row d-flex justify-content-between mb-3">
        <div class="col-4">
            <a class="btn btn-dark btn-sm" href="@Url.Action("Comments", "Admin")" role="button">
                <i class="fas fa-reply"></i>
            </a>
        </div>
        <div class="col-8">
            <h5>Редагувати відгук</h5>
        </div>
    </div>

    <hr />

    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <form action="/Admin/EditComment" method="post">
                <div class="form-group">
                    <input type="hidden" name="Id" value="@Model.Id" />
                </div>
                <div class="form-group">
                    <label for="commentAuthor">Автор</label>
                    <input type="text" class="form-control" name="Author" id="commentAuthor" maxlength="15" value="@Model.Author" required>
                </div>
                <div class="form-group">
                    <label for="commentText">Текст</label>
                    <textarea class="form-control" rows="3" name="Text" id="commentText" maxlength="300" required>@Model.Text</textarea>
                </div>
                <div class="form-group">
                    <label for="commentTime">Час та дата</label>
                    <input type="text" class="form-control" name="Time" id="commentTime" maxlength="30" value="@Model.Time" required>
                </div>
                <div class="form-group">
                    <label for="commentProductId">Товар</label>                
                    <select class="form-control" name="ProductId" id="commentProductId" required>
                        @foreach (var item in ViewBag.Products)
                        {
                            if (item.Id == Model.ProductId)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button type="submit" class="btn btn-dark">Зберегти</button>
                </div>
            </form>
        </div>
    </div>

