<!DOCTYPE html>
<html lang="ua">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Custom CSS -->
    @Styles.Render("~/Content/admin-custom")
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">

    <title>@ViewBag.Title - Admin</title>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                @Html.ActionLink("Admin Panel", "Index", "Admin", null, new { @class = "navbar-brand text-white" })
                <a class="btn btn-link nav-link text-white" href="@Url.Action("Logoff", "Admin")" role="button">
                    Вихід <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <ul class="nav flex-column p-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Admin")">
                                <i class="fas fa-home"></i> Головна
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Products", "Admin")">
                                <i class="fas fa-database"></i> Товари
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Categories", "Admin")">
                                <i class="fas fa-tags"></i> Категорії
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Comments", "Admin")">
                                <i class="fas fa-comments"></i> Відгуки
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Newsletter", "Admin")">
                                <i class="fas fa-envelope"></i> Розсилка
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-8 offset-lg-1 mt-4 mt-lg-0">
                    <div class="content py-4 px-5">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <!-- Admin scripts -->
    @Scripts.Render("~/bundles/admin-scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
